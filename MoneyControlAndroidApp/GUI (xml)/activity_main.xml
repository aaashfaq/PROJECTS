<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundoo">

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button2"
        android:onClick="allTransactions"
        android:text="All Transaction"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button6"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button2"
        android:onClick="help"
        android:text="HELP"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/export" />

    <Button
        android:id="@+id/rec_trans"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button2"
        android:text="Recursive transactions"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

    <Button
        android:id="@+id/btnAddTrans"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_button3"
        android:text="+"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="220dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_final3" />

    <Button
        android:id="@+id/button7"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/custom_button2"
        android:onClick="overView"
        android:text="Overview"
        android:textColor="@color/white"

        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/export"
        android:layout_width="255dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button2"
        android:onClick="export"
        android:text="Export Data"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_trans" />

</androidx.constraintlayout.widget.ConstraintLayout>