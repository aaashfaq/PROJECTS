<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="348dp"
        android:layout_height="197dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="32dp"
        android:text="Welcome To PennyWise\n\nThis application is build to help you keep track of your expenses. The user can keep choose a specific category or enter a new category of this own choice. Below you can find details regarding specific sections of app."
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button2"
        android:onClick="helpAddNewCategory"
        android:text="Adding a  New Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/button3"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button2"
        android:textColor="@color/white"
        android:onClick="helpFilteringTransactions"
        android:text="Filtering Transactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_button2"
        android:onClick="helpRecurringTransaction"
        android:text="Recurring Transactions"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button2"
        android:onClick="helpAddTransactionDetails"
        android:text="Adding Transactions Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button12"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:onClick="developers"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="152dp"
        android:background="@drawable/custom_button2"
        android:text="About Developers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>